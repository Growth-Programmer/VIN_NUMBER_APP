<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <stroke android:width="2dp" android:color="@color/teal_700"/> <!-- Highlighted border color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Default background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <stroke android:width="2dp" android:color="@color/colorOnPrimary"/> <!-- Default border color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>